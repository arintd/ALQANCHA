@model ALQANCHA.Models.Cancha

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="admin-background">
        <h2>Eliminar Cancha</h2>
        <h3>¿Estás seguro de que deseas eliminar esto?</h3>
        
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantJugadores)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantJugadores)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioXHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioXHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reservada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reservada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Confirmada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Confirmada)
        </dd>
    </dl>
    
    <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3 d-flex justify-content-end">
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
    </form>
</div>
</div>