@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center mt-5">
    <h1>¡Registrá las reservas para nuestras canchas de fútbol!</h1>
</div>

<div class="my-4">
    <!-- Clase 'my-4' agrega margen vertical -->
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/cancha1.png" class="d-block w-100" alt="Cancha 1">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/cancha2.png" class="d-block w-100" alt="Cancha 2">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/cancha3.png" class="d-block w-100" alt="Cancha 3">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var myCarousel = document.querySelector('#carouselExampleIndicators')
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 2000, // Intervalo entre slides 
            wrap: true // Permite rebobinar el carrusel al llegar al último slide 
        })
    </script>
}
