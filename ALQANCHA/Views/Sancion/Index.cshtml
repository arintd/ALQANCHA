@model IEnumerable<ALQANCHA.Models.Sancion>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="admin-background">
        <h2>Listado de Sanciones</h2>
        <hr />
        <p>
            <a asp-action="Create" class="btn btn-primary">Asignar Nueva Sanción</a>
        </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaImposicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jugador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaImposicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jugador.Id)
            </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>